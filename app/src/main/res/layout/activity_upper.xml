<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/sucdrafter"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/encpcolors"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:text="기안">
            </TextView>
            <TextView
                android:onClick="upperlist"
                android:layout_marginTop="10dp"
                android:id="@+id/upperdrafter"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:hint="입력해주세요.">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/sucreview"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/encpcolors"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="검토">
            </TextView>

            <TextView
                android:onClick="upperlist"
                android:layout_marginTop="10dp"
                android:id="@+id/upperreview"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:hint="입력해주세요.">
            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/sucpayment"
                android:textStyle="bold"
                android:background="@color/encpcolors"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:text="결제"></TextView>

            <TextView
                android:onClick="upperlist"
                android:layout_marginTop="10dp"
                android:id="@+id/upperpayment"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:gravity="center"
                android:hint="입력해주세요."></TextView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="3dp"
            >
            <GridLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:columnCount="2"
                android:rowCount="6">
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="my 프로젝트"></TextView>
                <TextView
                    android:layout_margin="5dp"
                    android:id="@+id/upperpjname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="aaa"
                    android:textSize="18sp"></TextView>
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="my 그룹"></TextView>
                <TextView
                    android:layout_margin="5dp"
                    android:id="@+id/upperpjgroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:text="aaa"></TextView>
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="보내는 사람  "></TextView>
                <TextView
                    android:layout_margin="5dp"
                    android:id="@+id/uppername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="aaa"
                    android:textSize="18sp"></TextView>


            </GridLayout>

            <LinearLayout
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="150dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="받는 사람:"></TextView>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/upperrecipient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:hint="입력해주세요."
                    android:onClick="upperlist"></TextView>

                <Button
                    android:visibility="invisible"
                    android:id="@+id/listbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/encpcolors"
                    android:textColor="#ffffff"
                    android:text="목록"></Button>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_marginTop="200dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/uppertitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="제목을 입력해주세요."></EditText>

                <EditText
                    android:id="@+id/uppercontents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:lines="10"
                    android:hint="내용을 입력해주세요."
                    android:maxLength="200"></EditText>
                <Button
                    android:id="@+id/upperbtn"
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/buttonstyle"
                    android:textColor="#ffffff"
                    android:text="전송"></Button>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>
</ScrollView>