            <GridLayout
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:columnCount="2"
                android:rowCount="2">
                <Button
                    android:id="@+id/uppaymentbtn"
                    android:onClick="uponClick"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="결제작성"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:background="@color/encpcolors"
                    android:textColor="#ffffff">
                </Button>
                <Button
                    android:id="@+id/upstatus"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:onClick="uponClick"
                    android:layout_margin="5dp"
                    android:background="@color/encpcolors"
                    android:text="결제현황"
                    android:textColor="#ffffff"
                    android:textSize="17sp"
                    android:textStyle="bold">
                </Button>
                <Button
                    android:visibility="visible"
                    android:id="@+id/imgbuttonlist"
                    android:onClick="uponClick"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/encpcolors"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:text="인원관리">

                </Button>

                <Button
                    android:visibility="visible"
                    android:id="@+id/imgbuttonapply"
                    android:onClick="uponClick"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/encpcolors"
                    android:text="신청관리"
                    android:textColor="#ffffff"
                    android:textSize="17sp"
                    android:textStyle="bold">
                </Button>
                <Button
                    android:visibility="gone"
                    android:id="@+id/upcirculationbtn"
                    android:onClick="uponClick"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonstyle"
                    android:textColor="#ffffff"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:text="회람작성">
                </Button>
                <Button
                    android:visibility="gone"
                    android:id="@+id/imgbuttonnotice"
                    android:onClick="uponClick"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/buttonstyle"
                    android:text="공지사항"
                    android:textColor="#ffffff"
                    android:textSize="17sp"
                    android:textStyle="bold">
                </Button>
            </GridLayout>
<!--        </androidx.cardview.widget.CardView>-->


    <TextView
        android:visibility="gone"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로젝트 공지사항"
        android:textSize="18sp"
        android:textColor="@color/encpcolors"
        android:textStyle="bold"></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/mainrecyc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"></androidx.recyclerview.widget.RecyclerView>
</LinearLayout>
</ScrollView>
