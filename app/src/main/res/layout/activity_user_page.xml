<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <androidx.cardview.widget.CardView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardElevation="5dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@color/encpcolors"
            android:textColor="#ffffffff"
            android:text="프로젝트">
        </TextView>
        <TextView
            android:layout_marginLeft="110dp"
            android:id="@+id/uppjname"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="80dp"
            android:textSize="20dp"
            android:text="num"></TextView>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardElevation="5dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@color/encpcolors"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="20dp"
            android:text="이름">
        </TextView>
        <TextView
            android:layout_marginLeft="110dp"
            android:id="@+id/upuname"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:gravity="center"
            android:textSize="20dp"
            android:text="num">
        </TextView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardElevation="5dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@color/encpcolors"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:text="그룹">
        </TextView>
        <TextView
            android:layout_marginLeft="110dp"
            android:id="@+id/upgroup"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:gravity="center"
            android:textSize="20dp"
            android:text="num">
        </TextView>
    </androidx.cardview.widget.CardView>
            <TextView
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="아이디:">
            </TextView>
            <TextView
                android:visibility="gone"
                android:layout_marginRight="100dp"
                android:id="@+id/upid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="num">
            </TextView>
            <TextView
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="직급:">
            </TextView>
            <TextView
                android:visibility="gone"
                android:layout_marginRight="120dp"
                android:id="@+id/upposition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="num">
            </TextView>

            <TextView
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="프로젝트 코드:">
            </TextView>
            <TextView
                android:visibility="gone"
                android:id="@+id/upcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="num">
            </TextView>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:weightSum="5">
        <androidx.cardview.widget.CardView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:text="상신"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@color/encpcolors"
                android:textColor="#ffffff"
                android:layout_gravity="center|top">
            </TextView>
            <TextView
                android:layout_marginTop="60dp"
                android:id="@+id/upupper"
                android:onClick="uponClick"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:text="0"
                android:textColor="#ff0000"
                android:gravity="center">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:text="검토"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@color/encpcolors"
                android:textColor="#ffffff"
                android:layout_gravity="center|top">
            </TextView>
            <TextView
                android:layout_marginTop="60dp"
                android:id="@+id/upupper2"
                android:onClick="uponClick"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:gravity="center"
                android:text="0"
                android:textColor="#ff0000">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:text="결제"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@color/encpcolors"
                android:textColor="#ffffff"
                android:layout_gravity="center|top">
            </TextView>
            <TextView
                android:layout_marginTop="60dp"
                android:id="@+id/upupper3"
                android:onClick="uponClick"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:gravity="center"
                android:text="0"
                android:textColor="#ff0000">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:text="배포"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@color/encpcolors"
                android:textColor="#ffffff"
                android:layout_gravity="center|top">
            </TextView>
            <TextView
                android:layout_marginTop="60dp"
                android:id="@+id/updistribute"
                android:onClick="uponClick"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:gravity="center"
                android:text="0"
                android:textColor="#ff0000">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:text="회람"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@color/encpcolors"
                android:textColor="#ffffff"
                android:layout_gravity="center|top">
            </TextView>
            <TextView
                android:layout_marginTop="60dp"
                android:onClick="uponClick"
                android:id="@+id/upcirculation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:text="0"
                android:textColor="#ff0000"
                android:gravity="center">
            </TextView>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

<!--        <androidx.cardview.widget.CardView-->
