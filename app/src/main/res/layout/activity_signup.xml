<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradation"
        android:text="회원가입"
        android:textColor="#ffffff"
        android:textSize="30sp">
    </TextView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@color/encpcolors"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="아이디"></TextView>
            <EditText
                android:layout_marginLeft="60dp"
                android:id="@+id/signid"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textVisiblePassword"
                android:background="@drawable/editbox"
                android:hint=" 4~12자리">
            </EditText>
            <Button
                android:layout_gravity="right"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="50dp"
                android:id="@+id/validate"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="중복확인"
                android:textColor="#ffffff"
                android:background="@color/colorAccent">
            </Button>
            <TextView
                android:layout_marginTop="90dp"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@color/encpcolors"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="비밀번호"></TextView>
            <EditText
                android:layout_marginTop="90dp"
                android:layout_marginLeft="60dp"
                android:id="@+id/signpwd"
                android:layout_width="match_parent"
                android:layout_gravity="left"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:background="@drawable/editbox"
                android:maxLength="12"
                android:hint=" 비밀번호">
            </EditText>
            <TextView
                android:layout_marginTop="150dp"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@color/encpcolors"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="이름"></TextView>
            <EditText
                android:layout_marginLeft="60dp"
                android:layout_marginTop="150dp"
                android:id="@+id/signname"
                android:layout_width="match_parent"
                android:layout_gravity="left"
                android:layout_height="50dp"
                android:background="@drawable/editbox"
                android:maxLength="20"
                android:hint=" 이름">

            </EditText>
        </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="2">

        <CheckBox
            android:visibility="invisible"
            android:layout_weight="0.5"
            android:id="@+id/signupcheck1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        </CheckBox>
        <TextView
            android:visibility="invisible"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="권한"></TextView>
        <Spinner
            android:visibility="invisible"
            android:layout_weight="1"
            android:id="@+id/signspinner"
            android:layout_width="100dp"
            android:layout_height="50dp">
        </Spinner>
    </LinearLayout>
    <Button
        android:id="@+id/signbutton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="150dp"
        android:layout_gravity="center"
        android:background="@drawable/buttonstyle"
        android:textColor="#ffffff"
        android:text="가입하기"
        android:gravity="center">
    </Button>
    </LinearLayout>
    </ScrollView>